<Page
    x:Class="AstroOdyssey.GamePlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AstroOdyssey"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Black"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">

        <!--  This renders the stars  -->
        <!--<GameEnvironment x:Name="StarView" Background="Transparent" />-->

        <!--  This redenders player, enemies, meteors, healths, and projectiles  -->
        <GameEnvironment x:Name="GameView" Background="Transparent" />

        <StackPanel
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            Orientation="Vertical">

            <!--  This shows current score  -->
            <TextBlock
                Name="ScoreText"
                Margin="5"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center" />

            <!--  This shows fps  -->
            <TextBlock
                Name="FPSText"
                Margin="5"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

            <!--  This shows current objects count in game canvas  -->
            <TextBlock
                Name="ObjectsCountText"
                Margin="5"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

        </StackPanel>

        <!--  This shows player health  -->
        <TextBlock
            Name="HealthText"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White" />

        <!--  This shows level up, power up text when difficulty scales  -->
        <TextBlock
            x:Name="InGameText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="50"
            FontWeight="Bold"
            Foreground="White" />

        <!--  This is for capturing input  -->
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border
                x:Name="LeftInputView"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                KeyDown="InputView_KeyDown"
                KeyUp="InputView_KeyUp"
                PointerPressed="LeftInputView_PointerPressed"
                PointerReleased="LeftInputView_PointerReleased" />

            <Border
                x:Name="RightInputView"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                KeyDown="InputView_KeyDown"
                KeyUp="InputView_KeyUp"
                PointerPressed="RightInputView_PointerPressed"
                PointerReleased="RightInputView_PointerReleased" />
        </Grid>

    </Grid>
</Page>
